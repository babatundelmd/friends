
<div class="row">
  <div class="col-md-3">
      <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <p>
          <strong>First name:</strong>
          <%= @friend.first_name %>
        </p>
      </li>
      <li class="list-group-item">
        <p>
          <strong>Last name:</strong>
          <%= @friend.last_name %>
        </p>
      </li>
      <li class="list-group-item">
          <p>
            <strong>Email:</strong>
            <%= @friend.email %>
        </p>
      </li>
      <li class="list-group-item">
        <p>
          <strong>Phone:</strong>
          <%= @friend.phone %>
        </p>
      </li>
      <li class="list-group-item">
        <p>
          <strong>Twitter:</strong>
          <%= @friend.twitter %>
      </p>
      </li>
    </ul>
  </div>

</div>


<%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-success" %> |
<%= link_to 'Back', friends_path, class: "btn btn-info"%>
